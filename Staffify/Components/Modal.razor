@inject NavigationManager navigation;
<div class="modal fade show" tabindex="-1" role="dialog" style="display: block; background-color: rgba(10,10,10,.8);" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
            </div>
            <div class="modal-body">
                <p>@Body</p>
            </div>
            <div class="modal-footer">
                <NavLink class="btn btn-success" href="@Route" @onclick="NavClick">@ButtonText</NavLink>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public string Title { get; set; } = "Modal Title";
    [Parameter]
    public string Body { get; set; } = "Modal Body Text";
    [Parameter]
    public string ButtonText { get; set; } = "Close";
    [Parameter]
    public string Route { get; set; } = "/";

    private void NavClick()
    {
        navigation.NavigateTo(Route, true);
    }
}